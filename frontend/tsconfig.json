{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./remix/app/*"
            ],
            "@stellar":["./remix/utils/stellar.server.ts"],
            "@types":["./remix/types/index.ts"],
            "@ui/*": [
                "./ui/*"
            ]
        }
    },
  
    "exclude": [
        "**/node_modules",
        "**/build"
    ]
}