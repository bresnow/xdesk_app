{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "broadway": {},
        "build":{
            "dependsOn": [
                "^build",
                "compile"
            ],
            "outputs": [
                "broadway-proxy/build/*",
                "broadway-proxy/public/build/**/*"
            ]
        },
        "compile": {
            "outputs": [
                "gi_modules/_compiled/**/*"
            ]
        },
        "deploy": {
            "dependsOn": [
                "build",
                "push"
            ]
        },
        "push": {
            "dependsOn": [
                "build"
            ]
        },
        "watch": {
            "outputs": [
                "gi_modules/_compiled/**/*",
                "broadway-proxy/build/**/*",
                "broadway-proxy/public/build/**/*"
            ]
        }
    }
}